      <div class="panel-body">
        <%= link_to @sectiontwo.contenttwo, sectiontwos_showpage_path %>
      </div>
    </div>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">
