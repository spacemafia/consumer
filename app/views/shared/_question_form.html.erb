<%= form_for(@question) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new question..." %>
  </div>
  <%= f.label :tags %>
	<%= f.select :tags, options_for_select(["Auto", "Finance", "Online Shopping", "Telecom", "Technology", "Travel"]) %>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>